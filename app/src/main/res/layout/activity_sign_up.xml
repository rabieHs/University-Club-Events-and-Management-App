<androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:padding="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#08e1ae"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/SignUpTxt"
            >

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".14"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/SignUpTxt"

            android:layout_marginTop="20dp"


            android:weightSum="10"
            android:id="@+id/Name">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:hint="Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:maxLines="1"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:id="@+id/first_name"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:hint="Last Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:maxLines="1"
                    android:background="@drawable/edittext_background"
                    android:padding="10dp"
                    android:id="@+id/last_name"></EditText>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/Name"
            android:id="@+id/email"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:hint="email"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:maxLines="1"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                android:id="@+id/user_email"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:id="@+id/password"
            app:layout_constraintTop_toBottomOf="@+id/email"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:hint="password"
                android:textColorHint="@android:color/darker_gray"
                android:maxLines="1"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:inputType="textPassword"
                android:id="@+id/user_password"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:id="@+id/repassword"
            app:layout_constraintTop_toBottomOf="@+id/password"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:hint="password"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:maxLines="1"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:inputType="textPassword"
                android:id="@+id/user_confirm_password"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:id="@+id/phone"
            app:layout_constraintTop_toBottomOf="@+id/repassword"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:hint="+216 -- --- ---"
                android:textColorHint="@android:color/darker_gray"
                android:maxLines="1"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:inputType="phone"
                android:id="@+id/user_phone_number"></EditText>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/phone"
            android:layout_marginTop="30dp"
            android:text="Register"
            android:backgroundTint="#08e1ae"
            android:id="@+id/regBtn"
            >


        </com.google.android.material.button.MaterialButton>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/regBtn"
            android:gravity="center"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Have An Account?"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="5dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:id="@+id/sign_in_act"
                ></TextView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>