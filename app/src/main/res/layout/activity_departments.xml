<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepartmentsActivity"
    android:background="#DCDCDC"
    android:padding="10dp"

    >

   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:rowCount="3"
       android:columnCount="2"

       android:paddingVertical="80dp"

       >

       <androidx.cardview.widget.CardView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="0"
           android:layout_column="0"
           android:layout_gravity="fill"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           android:layout_margin="8dp"
           app:cardCornerRadius="8dp"
           app:cardElevation="8dp"
           android:id="@+id/project_mangment">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_gravity="center_vertical|center_horizontal">
               <ImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/project_managment"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Project Mangment"
                   android:textStyle="bold"
                   android:textAlignment="center"
                   android:textColor="@color/black"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="0"
           android:layout_column="1"
           android:layout_gravity="fill"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           android:layout_margin="8dp"
           app:cardCornerRadius="8dp"
           app:cardElevation="8dp"
           android:id="@+id/marketing">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_gravity="center_vertical|center_horizontal">
               <ImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/marketing"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Marketing"
                   android:textStyle="bold"
                   android:textAlignment="center"
                   android:textColor="@color/black"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="1"
           android:layout_column="0"
           android:layout_gravity="fill"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           android:layout_margin="8dp"
           app:cardCornerRadius="8dp"
           app:cardElevation="8dp"
           android:id="@+id/finance">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_gravity="center_vertical|center_horizontal">
               <ImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/finance"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Finance"
                   android:textStyle="bold"
                   android:textAlignment="center"
                   android:textColor="@color/black"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="1"
           android:layout_column="1"
           android:layout_gravity="fill"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           android:layout_margin="8dp"
           app:cardCornerRadius="8dp"
           app:cardElevation="8dp"
           android:id="@+id/secretairy">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_gravity="center_vertical|center_horizontal">
               <ImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/secretaire"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Secretary"
                   android:textStyle="bold"
                   android:textAlignment="center"
                   android:textColor="@color/black"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>

   </GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>